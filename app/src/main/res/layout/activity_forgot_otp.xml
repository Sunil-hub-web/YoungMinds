<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/sign_logo"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/egk"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lgn_ll"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginLeft="@dimen/margin_left"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="30dp"
            >

            <ImageView
                android:id="@+id/email_logo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/mobilee"
                android:tint="@color/view_color"
                />
            <EditText
                android:id="@+id/edt_otp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/email_logo"
                android:background="@color/transparent"
                android:inputType="number"
                android:textSize="@dimen/register_text"
                android:hint="ENTER OTP"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginLeft="@dimen/margin_left"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resend_otp"
                    android:text="Resend Otp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_40dp"
                    android:textColor="@color/blue"
                    android:textSize="13dp"
                    android:textStyle="bold"/>



                <RelativeLayout
                    android:id="@+id/btn_verify_otp"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="@dimen/dimen_60dp"
                    android:background="@drawable/login_circlebox"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dimen_40dp"
                    >

                    <ImageView
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:src="@drawable/fowrward"
                        android:layout_centerInParent="true"
                        android:tint="@color/white"/>

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>






</RelativeLayout>