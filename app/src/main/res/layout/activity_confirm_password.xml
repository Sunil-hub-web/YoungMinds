<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/sign_logo"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/egk"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lgn_ll"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginLeft="@dimen/margin_left"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/passwrd"
                android:tint="@color/view_color"
                />
            <EditText
                android:id="@+id/edt_newpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/password"
                android:background="@color/transparent"
                android:inputType="textPassword"
                android:textSize="@dimen/register_text"
                android:hint="Enter New Password"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginLeft="@dimen/margin_left"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/cnf_password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/passwrd"
                android:tint="@color/view_color"
                />
            <EditText
                android:id="@+id/edt_cnf_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/cnf_password"
                android:background="@color/transparent"
                android:inputType="textPassword"
                android:textSize="@dimen/register_text"
                android:hint="Enter Confirm Password"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginLeft="@dimen/margin_left"/>




    </LinearLayout>
    <RelativeLayout
        android:id="@+id/btn_cnf_submit"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@drawable/login_circlebox"
        android:layout_below="@+id/lgn_ll"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_20dp">

        <ImageView
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:src="@drawable/fowrward"
            android:layout_centerInParent="true"
            android:tint="@color/white"/>

    </RelativeLayout>

</RelativeLayout>