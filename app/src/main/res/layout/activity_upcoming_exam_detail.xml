<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.egk.activites.UpcomingExamDetail">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:background="@color/backcolor"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_45dp">
        <ImageView
            android:id="@+id/gk_backicon"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:src="@drawable/backicon"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/gk_backicon"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAE6E5"
        android:layout_below="@+id/relative"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:fontFamily="sans-serif-medium"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:maxLines="2"
            android:textSize="17dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/item_name"/>

        <TextView
            android:id="@+id/txt_datt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:fontFamily="sans-serif"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorview"/>
        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:visibility="gone"
            android:fontFamily="sans-serif"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            android:textColor="@color/colorview"/>


        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray"/>


</LinearLayout>
