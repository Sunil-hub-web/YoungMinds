<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egk.fragment.MyProfile"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
      android:background="#ffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/upload_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle_shape"
                    card_view:cardCornerRadius="60dp"
                    card_view:cardPreventCornerOverlap="false">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:src="@drawable/profile_icon"
                        android:scaleType="fitXY"
                        android:layout_centerHorizontal="true"/>
                </android.support.v7.widget.CardView>



                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/edtprofile_icon_img"
                    android:src="@drawable/image_edit_icon"
                    android:elevation="5dp"
                    android:layout_marginTop="100dp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <ImageView
                    android:id="@+id/backicon"
                    android:layout_width="25dp"
                    android:layout_height="50dp"
                    android:src="@drawable/backicon"
                    android:layout_marginLeft="10dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                   android:layout_toRightOf="@id/backicon"
                    />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/upload_profile"
                android:layout_marginTop="5dp"
                android:background="#EAE6E5"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="18dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/usericon"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:enabled="false"
                    android:hint="Name"
                    android:textSize="@dimen/profiletextsize"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="160dp"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/name"
                    android:background="#EAE6E5"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/phone"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Phone"
                    android:textSize="@dimen/profiletextsize"
                    android:inputType="phone"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="160dp"
                    android:layout_centerInParent="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/phone"
                    android:background="#EAE6E5"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"

                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/messagebox"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/profiletextsize"
                    android:hint="Email"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:inputType="textEmailAddress"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="160dp"
                    />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@id/email"
    android:background="#EAE6E5"
    android:layout_marginRight="80dp"
    android:layout_marginLeft="80dp"/>

            </RelativeLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/img_gender"
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/gender_img"
                    android:layout_marginLeft="30dp"/>
                <Spinner
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15 july 1994"
                    android:textSize="@dimen/profiletextsize"
                    android:inputType="date"
                     android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/img_gender"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/gender"
                    android:background="#EAE6E5"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/address"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Address"
                    android:textSize="@dimen/profiletextsize"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="160dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/v_address"
                    android:layout_below="@id/address"
                    android:background="#EAE6E5"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/cityicon"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/profiletextsize"
                    android:enabled="false"
                    android:hint="City"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="160dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/city"
                    android:background="#EAE6E5"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/state"
                    android:layout_marginLeft="30dp"/>
                <Spinner
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="State"
                    android:textSize="@dimen/profiletextsize"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="160dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/state"
                    android:background="#EAE6E5"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/birthcake"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/profiletextsize"
                    android:inputType="date"
                    android:enabled="false"
                    android:hint="Dob"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="160dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/birthdate"
                    android:background="#EAE6E5"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/businessman"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/occupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Occupation"
                    android:enabled="false"
                    android:textSize="@dimen/profiletextsize"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="160dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/occupation"
                    android:background="#EAE6E5"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>


            <Button
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_box"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:text="Update Profile"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:gravity="center"
                 />

            <Button
                android:id="@+id/save_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_box"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:visibility="gone"
                android:text="Save Profile"
                android:textColor="#ffffff"
                android:textSize="15dp"/>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>