<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="8dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/conetwoimg"
            android:visibility="gone"
            android:src="@drawable/home_transactions"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:id="@+id/conetwotxt"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/conetwoimg"

            android:layout_marginLeft="@dimen/dimen_10dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorview"/>


        <ImageView
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:tint="@color/colorview"
            android:src="@drawable/rightforward"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray"
        android:layout_below="@+id/relative"/>
</RelativeLayout>
