<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/backcolor">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/sign_logo"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/egk"/>


    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_18dp"
        android:text="Welcome back!"
        android:textColor="@color/black"
        android:layout_below="@id/sign_logo"
       android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:textStyle="bold"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lgn_ll"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/welcome"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="30dp"
            >

            <ImageView
                android:id="@+id/email_logo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/mobilee"
                android:tint="@color/view_color"
                />
            <EditText
                android:id="@+id/edtl_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/email_logo"
                android:background="@color/transparent"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="@dimen/register_text"
                android:hint="Enter Mobile Number"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginLeft="@dimen/margin_left"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="@dimen/dimen_20dp"
            >

            <ImageView
                android:id="@+id/password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/passwrd"
                android:tint="@color/view_color"
                />
            <EditText
                android:id="@+id/edtl_pswd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/password"
                android:background="@color/transparent"
                android:inputType="textPassword"
                android:textSize="@dimen/register_text"
                android:hint="Enter Password"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginLeft="@dimen/margin_left"/>






    </LinearLayout>
  <RelativeLayout
      android:id="@+id/relative5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/lgn_ll"
  android:layout_margin="@dimen/dimen_40dp">
    <TextView
        android:id="@+id/txt_fgtpswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="13dp"
        android:textColor="@color/blue"
        android:layout_alignParentRight="true"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/txt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="13dp"
        android:textColor="@color/blue"
        android:textStyle="bold"

     />
  </RelativeLayout>





    <RelativeLayout
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@drawable/login_circlebox"
        android:layout_below="@+id/relative5"
        android:layout_alignParentRight="true"
       android:layout_marginRight="@dimen/dimen_40dp">

        <ImageView
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:src="@drawable/fowrward"
            android:layout_centerInParent="true"
            android:tint="@color/white"/>

    </RelativeLayout>


</RelativeLayout>